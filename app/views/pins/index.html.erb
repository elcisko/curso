<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url(:thumb) %></td>
      <div class="panel-body">
        <%= pin.description %></td>
        <%= pin.user.email if pin.user %></td>
        <%= link_to 'Show', pin %></td>
        <% if pin.user == current_user %>
          <%= link_to 'Edit', edit_pin_path(pin) %></td>
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

